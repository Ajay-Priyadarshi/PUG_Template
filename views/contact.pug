extends base.pug

block scripts
    script (src="/static/index.js")

block style 
    style   
        include ../static/style.css
        include ../static/styleContact.css

block content 
    div.container
        h1 Contact Us
        form(action="/contact", method="get", class="frm")
            input(type="text", class="inp", name="name", placeholder="Enter your name")
            input(type="phone", class="inp", name="phone", placeholder="Enter your phone no")
            input(type="email", class="inp", name="email", placeholder="Enter your email")
            input(type="text", class="inp", name="address", placeholder="Enter your address")
            input(type="text", class="inp", name="desc", placeholder="Enter your desc")
            button.btn 
                | Submit